<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondary_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_header_profile_pic"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:src="@drawable/user"
            app:civ_border_width="1sp" />

        <TextView
            android:id="@+id/nav_header_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_header_profile_pic"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/bold"
            android:text="User Name"
            android:textColor="@color/secondary"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav_header_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp">

            <TextView
                android:id="@+id/nav_header_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="+91-123456789"
                android:textColor="@color/secondary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nav_header_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_header_phone_number"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/regular"
                android:text="14/01/1999"
                android:textColor="@color/secondary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nav_header_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/regular"
                android:text="Male"
                android:textColor="@color/secondary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nav_header_blood_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_header_gender"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/regular"
                android:text="AB+"
                android:textColor="@color/secondary"
                android:textSize="15sp" />

        </RelativeLayout>
    </RelativeLayout>


</ScrollView>