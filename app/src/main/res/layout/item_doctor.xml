<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7sp"
    android:background="@color/white"
    android:padding="4sp"
    app:cardCornerRadius="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_doctor_image"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:src="@drawable/family_physician" />

        <LinearLayout
            android:id="@+id/item_doctor_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16sp"
            android:layout_toStartOf="@id/item_doctor_layout2"
            android:layout_toEndOf="@id/item_doctor_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Doctor Name"
                android:textColor="@color/secondary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_doctor_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="11 Years of experience"
                android:textColor="@color/secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_doctor_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_doctor_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Rs.250"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/item_doctor_cp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Rs.200"
                android:textColor="@color/green"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>