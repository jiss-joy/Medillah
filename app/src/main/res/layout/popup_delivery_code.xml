<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="8sp"
    app:cardCornerRadius="15sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="10sp">

        <EditText
            android:id="@+id/delivery_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/custom_editext"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:hint="Enter Delivery Code"
            android:inputType="number"
            android:padding="10sp"
            android:textColorHint="@color/facebook_blue" />

        <TextView
            android:id="@+id/delivery_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text="Enter the delivery code that you got from the delivery person"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delivery_code_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="15sp"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:paddingHorizontal="60sp"
            android:paddingVertical="15sp"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_dark" />

    </LinearLayout>


</androidx.cardview.widget.CardView>