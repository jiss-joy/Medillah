<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7sp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_product_short_image"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_centerVertical="true"
            android:layout_margin="20sp"
            fresco:placeholderImage="@drawable/orders" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginVertical="20sp"
            android:layout_marginEnd="20sp"
            android:layout_toEndOf="@id/item_product_short_image">

            <TextView
                android:id="@+id/item_product_short_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Himalaya Ashvagandha 60 Tablets"
                android:textAllCaps="false"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_product_short_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_product_short_name"
                android:fontFamily="@font/bold"
                android:text="₹125"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_product_short_mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_product_short_name"
                android:layout_marginStart="10sp"
                android:layout_toEndOf="@id/item_product_short_sp"
                android:fontFamily="@font/regular"
                android:text="₹150"
                android:textColor="@color/secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_product_short_percent_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_product_short_name"
                android:layout_marginStart="10sp"
                android:layout_toEndOf="@id/item_product_short_mrp"
                android:fontFamily="@font/bold"
                android:text="16.67% off"
                android:textColor="@color/green"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/item_product_short_save_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_product_short_sp"
                android:fontFamily="@font/regular"
                android:text="Save ₹25"
                android:textColor="@color/secondary"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>