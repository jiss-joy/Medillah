<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.ProductDescriptionActivity">

    <include
        android:id="@+id/product_desc_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/product_desc_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/product_desc_image"
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:layout_margin="10sp"
                    android:src="@drawable/orders" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/product_desc_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_desc_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="Himalaya Ashvagandha 60 Tablets"
                        android:textColor="@color/secondary"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/product_desc_sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/bold"
                            android:text="₹125"
                            android:textColor="@color/secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/product_desc_mrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/regular"
                            android:text="₹150"
                            android:textColor="@color/secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/product_desc_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:fontFamily="@font/bold"
                            android:text="16.67% off"
                            android:textColor="@color/green"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Brand Name"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Himalaya"
                android:textColor="@color/secondary"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Shelf Life"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="2 Years"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Dosage Form"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_dosage_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Tablets"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Dosage"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="2 Tablets daily"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Manufactured By"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_mfg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Himalaya"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Packed By"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_pck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Himalaya"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Imported By"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_imp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Himalaya"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10sp"
                android:background="@color/secondary_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Caution"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/product_desc_caution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Store in a cool place."
                android:textColor="@color/secondary"
                android:textSize="16sp" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>