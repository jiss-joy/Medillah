<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_details_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_light"
    tools:context=".Activities.ProductDetailsActivity">

    <include
        android:id="@+id/product_details_toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/product_details_add_to_cart_btn"
        android:layout_below="@id/product_details_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/product_details_image_slider"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:background="@color/white"
                app:sliderAutoCycleDirection="right"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="4dp"
                app:sliderIndicatorRadius="1.5dp"
                app:sliderIndicatorSelectedColor="@color/primary"
                app:sliderIndicatorUnselectedColor="@color/secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/bold"
                android:text="Product Details"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7sp"
                android:elevation="10sp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="16sp">

                    <TextView
                        android:id="@+id/product_details_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="Himalaya Ashvagandha 60 Tablets"
                        android:textColor="@color/secondary"
                        android:textSize="16sp" />


                    <include
                        android:id="@+id/product_details_product_rating"
                        layout="@layout/custom_rating_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_product_name"
                        android:layout_marginTop="5sp" />

                    <TextView
                        android:id="@+id/product_details_product_selling_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_product_rating"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/bold"
                        android:text="₹125"
                        android:textColor="@color/secondary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/product_details_product_mrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_product_rating"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_toEndOf="@id/product_details_product_selling_price"
                        android:fontFamily="@font/regular"
                        android:text="₹150"
                        android:textColor="@color/secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/product_details_product_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_product_rating"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_toEndOf="@id/product_details_product_mrp"
                        android:fontFamily="@font/bold"
                        android:text="16.67% off"
                        android:textColor="@color/green"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/product_details_product_savings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_product_selling_price"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/bold"
                        android:text="Save ₹25"
                        android:textColor="@color/secondary"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/product_details_quantity_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_product_name"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5sp"
                            android:text="Quantity"
                            android:textColor="@color/secondary"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageButton
                                android:id="@+id/product_details_remove_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/primary"
                                android:src="@drawable/remove"
                                app:rippleColor="@color/primary_dark" />

                            <TextView
                                android:id="@+id/product_details_quantity"
                                android:layout_width="25sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="10sp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/secondary"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/product_details_add_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/primary"
                                android:src="@drawable/add"
                                app:rippleColor="@color/primary_dark" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="5sp"
                android:drawablePadding="10sp"
                android:fontFamily="@font/bold"
                android:text="Product Description"
                android:textColor="@color/secondary"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/about"
                app:drawableTint="@color/secondary" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7sp"
                android:backgroundTint="@color/white"
                android:paddingVertical="10sp"
                android:text="Product Description"
                android:textColor="@color/secondary"
                app:icon="@drawable/right"
                app:iconGravity="end"
                app:iconTint="@color/secondary"
                app:rippleColor="@color/primary_dark" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7sp"
                android:elevation="10sp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="16sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/product_details_share_btn"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Like what you saw?"
                            android:textColor="@color/secondary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text1"
                            android:fontFamily="@font/bold"
                            android:text="Share it with your friends."
                            android:textColor="@color/secondary"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/product_details_share_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5sp"
                        android:fontFamily="@font/bold"
                        android:text="Share"
                        android:textColor="@color/secondary"
                        app:icon="@drawable/share"
                        app:iconTint="@color/secondary"
                        app:rippleColor="@color/primary_dark" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/product_details_review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="7sp"
                android:fontFamily="@font/bold"
                android:text="Reviews and Ratings"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/product_details_review_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7sp"
                android:elevation="10sp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="16sp">

                    <LinearLayout
                        android:id="@+id/product_details_review_layout_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/product_details_review_image"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:src="@drawable/user" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10sp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/product_details_review_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bold"
                                android:text="Aravind K"
                                android:textColor="@color/secondary"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/product_details_review_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="9:56 AM, 17 Nov 2020"
                                android:textColor="@color/secondary"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <include
                        android:id="@+id/product_details_user_review_ratings"
                        layout="@layout/custom_user_rating_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <com.skyhope.showmoretextview.ShowMoreTextView
                        android:id="@+id/product_details_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_review_layout_1"
                        android:layout_marginTop="10sp"
                        android:text="Everything is good"
                        android:textColor="@color/secondary" />

                    <View
                        android:id="@+id/product_details_line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/product_details_review"
                        android:layout_marginTop="15sp"
                        android:background="@color/secondary_light" />

                    <com.ornach.nobobutton.NoboButton
                        android:id="@+id/product_details_all_review_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_details_line"
                        android:layout_marginTop="5sp"
                        app:nb_backgroundColor="@color/white"
                        app:nb_borderWidth="2dp"
                        app:nb_focusColor="@color/primary_dark"
                        app:nb_text="See All Reviews"
                        app:nb_textColor="@color/secondary"
                        app:nb_textSize="16sp"
                        app:nb_textStyle="bold" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/bold"
                android:text="Products you might also like"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_details_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="7sp"
                android:layout_marginVertical="10sp"
                android:orientation="horizontal" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/product_details_add_to_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        app:nb_backgroundColor="@color/primary"
        app:nb_borderWidth="2dp"
        app:nb_focusColor="@color/primary_dark"
        app:nb_text="Add to Cart"
        app:nb_textColor="@color/secondary"
        app:nb_textSize="16sp"
        app:nb_textStyle="bold" />

</RelativeLayout>