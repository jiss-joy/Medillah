<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8sp"
    app:cardCornerRadius="6sp"
    app:elevation="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20sp">

        <TextView
            android:id="@+id/confirm_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="Are you sure you want to cancel this order?"
            android:textColor="@color/secondary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirm_cancel_text"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/confirm_cancel_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/primary_dark" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/confirm_cancel_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="20sp"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/red" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>